    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
        },
        {
            "name": "Launch Vivaldi",
            "type": "chrome", 
            "request": "launch",
            "url": "http://localhost:5173", 
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "C:/Users/Fagner/AppData/Local/Vivaldi/Application/vivaldi.exe", 
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost on Firefox",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}"
        },
    ]
}